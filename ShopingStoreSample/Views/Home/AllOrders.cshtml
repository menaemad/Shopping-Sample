@model List<ShopingStoreSample.ViewModel.AllOrders>
@{
    ViewBag.Title = "AllOrders";
}

<h2>Index</h2>


<div class="container">
    <br /><br /><br />
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
                <div class="card">
                    <img class="card-img-top" src="@Url.Content("~/Content/" + item.Image)">
                    <div class="card-block">
                        <h5 class="text-bold text-center mt-3"> @item.Name</h5>
                        <h5 class="text-bold text-center mt-3">Price: @item.Price</h5>
                        <h5 class="text-bold text-center mt-3"> Quantity: @item.Quantity</h5>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
