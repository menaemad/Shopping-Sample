@using ShopingStoreSample.Models
@model List<Category>

@{
    ViewBag.Title = "Index";
}

<br /><br /><br /><br />

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
                <div class="card">
                    <img class="card-img-top" src="@Url.Content("~/Content/" + item.Image)">
                    <div class="card-block">
                        <h5 class="text-bold text-center mt-3"> @item.Name</h5>
                        <div class="text-center">
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @Class = "btn btn-success mt-3 mb-3" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @Class = "btn btn-primary mt-3 mb-3" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
